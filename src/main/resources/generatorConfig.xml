        <!-- 对于生成的pojo所在包 -->
        <javaModelGenerator targetPackage="com.gin.ginblogproject.model.entity"
                            targetProject="E:\idea_workspace\ginblogproject\src\main\java"
        />

        <!-- 对于生成的mapper所在目录 -->
        <sqlMapGenerator targetPackage="mapper"
                         targetProject="E:\idea_workspace\ginblogproject\src\main\resources"
        />

        <!-- 配置mapper对应的java映射 -->
        <javaClientGenerator
                targetPackage="com.gin.ginblogproject.mapper"
                targetProject="E:\idea_workspace\ginblogproject\src\main\java"
                type="XMLMAPPER"
        />

